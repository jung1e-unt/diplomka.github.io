        <!-- Стили -->
        <style>
            .service-btn {
                background: none;
                border: none;
                color: #333;
                font-size: 15px;
                cursor: pointer;
                padding: 5px 10px;
                transition: color 0.3s;
            }

                .service-btn:hover {
                    color: #1abc9c;
                    text-decoration: underline;
                }

            .more-dropdown-full {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                width: 100%;
                background-color: white;
                border-top: 2px solid #1abc9c;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                padding: 20px 40px;
                z-index: 1000;
                display: flex;
                justify-content: space-around;
                flex-wrap: wrap;
            }

            .dropdown-section {
                min-width: 200px;
            }

                .dropdown-section h5 {
                    font-size: 16px;
                    color: #1abc9c;
                    margin-bottom: 10px;
                }

                .dropdown-section ul {
                    list-style: none;
                    padding: 0;
                    margin: 0;
                }

                .dropdown-section li {
                    margin-bottom: 8px;
                }

                .dropdown-section a {
                    color: #333;
                    text-decoration: none;
                    display: inline-block;
                    padding: 5px;
                }

                    .dropdown-section a:hover {
                        text-decoration: underline;
                    }
        </style>

        <!-- Скрипт -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const moreBtn = document.getElementById("more-btn");
                const dropdown = document.getElementById("more-dropdown");

                // Изначально скрываем меню (на всякий случай)
                dropdown.style.display = "none";

                // Обработчик кнопки "Ещё"
                moreBtn.addEventListener("click", function (e) {
                    e.stopPropagation(); // не всплывает к document
                    dropdown.style.display = (dropdown.style.display === "flex") ? "none" : "flex";
                });

                // Закрытие при клике вне меню
                document.addEventListener("click", function (e) {
                    if (!dropdown.contains(e.target) && e.target !== moreBtn) {
                        dropdown.style.display = "none";
                    }
                });

                // Обработка всех кнопок с выбором услуги
                document.querySelectorAll(".service-btn[data-service]").forEach(btn => {
                    btn.addEventListener("click", function () {
                        const service = this.getAttribute("data-service");

                        // Подставляем услугу в input (если есть)
                        const input = document.querySelector("#serviceInput");
                        if (input) {
                            input.value = service;
                        }

                        // Закрываем меню после выбора
                        dropdown.style.display = "none";
                    });
                });
            });
        </script>


    </header>
</body>
</html>
