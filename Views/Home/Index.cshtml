                    sizeButtons.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    selectedSize = parseInt(btn.dataset.size);
                    sizeInput.value = '';
                    updatePrice();
                });
            });

            sizeInput.addEventListener('input', () => {
                sizeButtons.forEach(b => b.classList.remove('active'));
                const val = parseInt(sizeInput.value);
                if (!isNaN(val) && val >= 10) {
