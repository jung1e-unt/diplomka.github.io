// --- Сохранение состояния выбранных таблиц ---
function saveSelectedTables(names) {
    try {
        localStorage.setItem("selectedTables", JSON.stringify(names));
    } catch (e) {
        console.warn("Не удалось сохранить выбранные таблицы:", e);
    }
}

// --- Загрузка состояния выбранных таблиц ---
function loadSelectedTables() {
    try {
        const raw = localStorage.getItem("selectedTables");
        if (!raw) return [];
        return JSON.parse(raw);
    } catch {
        return [];
    }
}
